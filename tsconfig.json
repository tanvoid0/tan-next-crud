{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES2016",
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths":  {
      "@tan/*": ["src/*"]
    },
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext"
    ],
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*"
  ]
}